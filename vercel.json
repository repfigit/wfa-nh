{
  "version": 2,
  "buildCommand": "npm run build",
  "outputDirectory": "public",
  "rewrites": [
    { "source": "/api/(.*)", "destination": "/api" }
  ],
   "functions": {
     "api/index.ts": {
       "memory": 1024,
       "maxDuration": 60
     },
     "api/debug.ts": {
       "memory": 1024,
       "maxDuration": 30
     }
   }
}
